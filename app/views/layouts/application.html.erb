						<div class="esteticaMenuSup">
						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/alertas" lang="en"><%= image_tag "menu_alert.jpg", :alt => "Alert" %> Alertas</a>
						<% if defined?@pagina and @pagina == 'Alertas' %>
