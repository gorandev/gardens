        		image_argentina = "argentina.png"
        		image_chile = "chile_gris.png"
    		end
    		%>
    		<li><%= link_to image_tag(image_argentina, :title => "Argentina", :border => 0), url_for(:country_id => 1), :id => 'link_argentina' %></li>
