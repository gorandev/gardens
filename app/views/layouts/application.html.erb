						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>
						
						<% if defined?@usuario_admin %>
						
						<li class="menuAlert">
						<% if defined?@pagina and @pagina == 'Productizador' %>
						<div class="esteticaMenu">
						<div class="esteticaMenuSup">
						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/productizador" lang="en"><%= image_tag "menu_alert.jpg", :alt => "Productizador" %>Productizador</a>
						<% if defined?@pagina and @pagina == 'Productizador' %>
						<div class="esteticaMenuInf">
						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>
						
						<li class="menuAlert">
						<% if defined?@pagina and @pagina == 'Revisar promociones' %>
						<div class="esteticaMenu">
						<div class="esteticaMenuSup">
						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/revisar_promociones" lang="en"><%= image_tag "menu_alert.jpg", :alt => "Revisar promociones" %>Revisar<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;publicaciones</a>
						<% if defined?@pagina and @pagina == 'Revisar promociones' %>
						<div class="esteticaMenuInf">
						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>
						
						<li class="menuAlert">
						<% if defined?@pagina and @pagina == 'Cargar promociones' %>
						<div class="esteticaMenu">
						<div class="esteticaMenuSup">
						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/cargar_promociones" lang="en"><%= image_tag "menu_alert.jpg", :alt => "Cargar promociones" %>Cargar<br/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;publicaciones</a>
						<% if defined?@pagina and @pagina == 'Cargar promociones' %>
						<div class="esteticaMenuInf">
						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>
						
						<% end %>
						
					</ul>
				</div>
				<!--Contenido-->
				<div id="contenido"><a name="contenido"></a><%= yield %></div>
			</div>
		</div>
		<div class="pie">
			<div class="esteticaInf">
				<div class="esteticaInfIzq"></div>
				<div class="esteticaInfDer"></div>
			</div>
		</div>
	</div>
</div>
</body>
</html>
