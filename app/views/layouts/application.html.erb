</script>

<%= javascript_include_tag "https://ajax.googleapis.com/ajax/libs/prototype/1.7.0.0/prototype.js", "https://ajax.googleapis.com/ajax/libs/scriptaculous/1.9.0/scriptaculous.js?load=effects,builder,dragdrop" %>
<%= include_javascripts :basico %>
<%= yield :javascript %>

<% if defined?@google_analytics_key %>
<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', '<%= @google_analytics_key %>']);
  _gaq.push(['_trackPageview']);
  
  _gaq.push(['_setCustomVar',
	1,
	'Usuario',
	'<%= userid %>',
	1
  ]);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
<% end %>

<%= csrf_meta_tag %>
<%= favicon_link_tag %>
