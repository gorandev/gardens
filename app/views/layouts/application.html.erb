						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/retailers" lang="en"><%= image_tag "menu_prices.jpg", :alt => "Retailers" %> Retailers</a>
						<% if defined?@pagina and @pagina == 'Retailers' %>
						<div class="esteticaMenuInf">
						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>
						<% end %>
						
						<li class="menuProduct">
						<% if defined?@pagina and @pagina == 'Productos' %>
						<div class="esteticaMenu">
						<div class="esteticaMenuSup">
						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/pagina_producto" lang="en"><%= image_tag "menu_product.jpg", :alt => "Product" %> Productos</a>
						<% if defined?@pagina and @pagina == 'Productos' %>
						<div class="esteticaMenuInf">
						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>
						
						<li class="menuProduct">
						<% if defined?@pagina and @pagina == 'Publicaciones' %>
						<div class="esteticaMenu">
						<div class="esteticaMenuSup">
						<div class="esteticaMenuSupIzq"></div>
						</div>
						<% end %>
						<a href="/dashboard/publicaciones" lang="en"><%= image_tag "menu_publicaciones.jpg", :alt => "Publicaciones" %> Publicaciones</a>
						<% if defined?@pagina and @pagina == 'Publicaciones' %>
						<div class="esteticaMenuInf">
						<div class="esteticaMenuInfIzq"></div>
						</div>
						</div>
						<% end %>
						</li>						
						
						<li class="menuAlert">
						<% if defined?@pagina and @pagina == 'Alertas' %>
