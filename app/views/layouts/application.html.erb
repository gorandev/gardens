        	</li>
            <li><%= link_to "Celulares", "", :id => "link_celulares", :onClick => "return false;", :style => 'color: #CCC;' %></li>
        </ul>
        <ul class="paises">
        	<% 
        	image_argentina = "argentina_gris.png"
